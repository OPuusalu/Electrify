{
  "name": "elektrihind-notify-app",
  "version": "1.0.0",
  "description": "App for electricity price notifications",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "package": "electron-packager . ElektrihindNotify --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "keywords": [
    "electricity",
    "notifications",
    "prices"
  ],
  "author": "Your Name",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.elektrihind.notify",
    "productName": "Elektrihind Notify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "icon": "new-icon.ico",
      "target": "nsis"
    }
  }
}
